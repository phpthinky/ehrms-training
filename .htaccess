RewriteEngine On

# Handle root URL (https://democodes.online/)
RewriteRule ^$ public/index.php [L]

# Security
Options -Indexes

# Block sensitive folders
RewriteRule ^app/ - [F,L]
RewriteRule ^database/ - [F,L]

# Block sensitive files
<FilesMatch "\.(sql|db|log|ini|conf|bak|env|htaccess)$">
    Order allow,deny
    Deny from all
</FilesMatch>